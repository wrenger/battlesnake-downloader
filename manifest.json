{
    "manifest_version": 2,
    "name": "Battlesnake Downloader",
    "version": "0.8",
    "description": "Download battlesnake games.",
    "homepage_url": "https://gitlab.com/wrenger/battlesnake-downloader",
    "icons": {
        "32": "icons/snake-32.png"
    },
    "permissions": [
        "activeTab",
        "webRequest",
        "clipboardWrite",
        "*://play.battlesnake.com/game/*",
        "*://engine.battlesnake.com/games/*"
    ],
    "page_action": {
        "browser_style": false,
        "default_icon": "icons/snake-32.png",
        "default_title": "Download Battlesnake Game",
        "default_popup": "popup/index.html",
        "show_matches": ["*://play.battlesnake.com/game/*"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "battlesnake-downloader@l4r0x.com",
            "strict_min_version": "79.0"
        }
    }
}
